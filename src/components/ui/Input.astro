---
interface Props {
  type?: string;
  name?: string;
  id?: string;
  placeholder?: string;
  required?: boolean;
  value?: string;
  class?: string;
}

const {
  type = 'text',
  name,
  id,
  placeholder,
  required = false,
  value,
  class: className = '',
} = Astro.props;
---

<input
  type={type}
  name={name}
  id={id}
  placeholder={placeholder}
  required={required}
  value={value}
  class={`w-full px-4 py-3 rounded-lg border-2 border-gray-200 focus:border-primary-500 focus:outline-none focus:ring-2 focus:ring-primary-200 transition-colors ${className}`}
/>
