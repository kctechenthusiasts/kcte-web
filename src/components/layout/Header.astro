---
import Button from '../ui/Button.astro';
import { siteConfig } from '../../config/site';
---

<header class="sticky top-0 z-50 w-full border-b border-gray-200 bg-white">
  <nav class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex h-16 items-center justify-between">
      <a href="/" class="flex items-center space-x-2">
        <img src="/kc-logo.svg" alt="Kansas City Logo" class="h-10 w-auto" />
        <span class="text-xl font-bold tracking-tight text-gray-900 uppercase" style="font-family: 'Poppins', sans-serif;">Tech Enthusiasts</span>
      </a>
      
      <div class="hidden md:flex items-center space-x-8">
        <a href="/" class="text-gray-700 hover:text-primary-600 font-medium transition-colors">Home</a>
        <a href="/about" class="text-gray-700 hover:text-primary-600 font-medium transition-colors">About</a>
        <a href="/events" class="text-gray-700 hover:text-primary-600 font-medium transition-colors">Events</a>
        <a href="/topics" class="text-gray-700 hover:text-primary-600 font-medium transition-colors">Topics</a>
        <a href="/contact" class="text-gray-700 hover:text-primary-600 font-medium transition-colors">Contact</a>
        <Button href="/events" variant="primary" size="sm" class="!bg-[#ED1C40] hover:!bg-[#d91a3a]">Meetup</Button>
      </div>

      <button id="mobile-menu-button" class="md:hidden p-2 rounded-lg text-gray-700 hover:bg-gray-100 transition-colors" aria-label="Toggle menu">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>

    <div id="mobile-menu" class="hidden md:hidden pb-4">
      <div class="flex flex-col space-y-4 pt-4">
        <a href="/" class="text-gray-700 hover:text-primary-600 font-medium transition-colors">Home</a>
        <a href="/about" class="text-gray-700 hover:text-primary-600 font-medium transition-colors">About</a>
        <a href="/events" class="text-gray-700 hover:text-primary-600 font-medium transition-colors">Events</a>
        <a href="/topics" class="text-gray-700 hover:text-primary-600 font-medium transition-colors">Topics</a>
        <a href="/contact" class="text-gray-700 hover:text-primary-600 font-medium transition-colors">Contact</a>
        <Button href="/events" variant="primary" size="sm" class="w-full !bg-[#ED1C40] hover:!bg-[#d91a3a]">Meetup</Button>
      </div>
    </div>
  </nav>
</header>

<script>
  const menuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  
  if (menuButton && mobileMenu) {
    menuButton.addEventListener('click', () => {
      mobileMenu.classList.toggle('hidden');
    });
  }
</script>
