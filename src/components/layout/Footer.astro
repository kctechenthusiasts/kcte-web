        </div>
      </div>
      
      <div>
        <h4 class="text-white font-semibold mb-4">Quick Links</h4>
        <ul class="space-y-2">
          <li><a href="/" class="hover:text-primary-400 transition-colors">Home</a></li>
          <li><a href="/about" class="hover:text-primary-400 transition-colors">About</a></li>
          <li><a href="/events" class="hover:text-primary-400 transition-colors">Events</a></li>
          <li><a href="/contact" class="hover:text-primary-400 transition-colors">Contact</a></li>
        </ul>
      </div>
      
      <div>
        <h4 class="text-white font-semibold mb-4">Contact</h4>
        <ul class="space-y-2">
          <li>
            <a href={`mailto:${siteConfig.contact.email}`} class="hover:text-primary-400 transition-colors">
              {siteConfig.contact.email}
            </a>
          </li>
        </ul>
      </div>
    </div>
    
    <div class="mt-8 pt-8 border-t border-gray-800 text-center text-sm text-gray-400">
      <p>&copy; {new Date().getFullYear()} {siteConfig.name}. All rights reserved.</p>
    </div>
  </div>
</footer>

<!-- Signal Modal -->
<div id="signal-modal" class="fixed inset-0 z-[10000] hidden items-center justify-center bg-black/50">
  <div class="bg-white rounded-lg shadow-xl p-6 mx-4 max-w-sm">
    <div class="flex items-center justify-between mb-4">
      <h3 class="text-lg font-bold text-gray-900">Join our Signal Group</h3>
      <button id="signal-modal-close" class="text-gray-400 hover:text-gray-600">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>
    <p class="text-gray-600">Contact Evan, Jesse, or Cayden for the link to join the Signal group.</p>
  </div>
</div>

<script>
  const signalModal = document.getElementById('signal-modal');
  const signalModalClose = document.getElementById('signal-modal-close');

  const openModal = () => {
    if (signalModal) {
      signalModal.classList.remove('hidden');
      signalModal.classList.add('flex');
    }
  };

  const closeModal = () => {
    if (signalModal) {
      signalModal.classList.add('hidden');
      signalModal.classList.remove('flex');
    }
  };

  // Handle all Signal buttons on the page
  document.querySelectorAll('[id^="signal-btn"]').forEach(btn => {
    btn.addEventListener('click', openModal);
  });

  if (signalModalClose) {
    signalModalClose.addEventListener('click', closeModal);
  }

  if (signalModal) {
    signalModal.addEventListener('click', (e) => {
      if (e.target === signalModal) {
        closeModal();
      }
    });
  }
</script>
