            {siteConfig.links.github && (
              <a href={siteConfig.links.github} target="_blank" rel="noopener noreferrer" class="w-12 h-12 bg-gray-100 rounded-lg flex items-center justify-center text-gray-600 hover:bg-primary-100 hover:text-primary-600 transition-colors">
